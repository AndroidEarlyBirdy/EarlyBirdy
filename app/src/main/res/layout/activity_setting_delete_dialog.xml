<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_radius_background"
    android:layout_gravity="center"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/tv_sdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingVertical="5dp"
        android:paddingStart="10dp"
        android:text="@string/settingdeletedialog_account_delet"
        android:textColor="#444444"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sdd_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="60dp"
        android:text="@string/settingdeletedialog_cancel"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#DBDBDA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sdd" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sdd_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="60dp"
        android:text="@string/settingdeletedialog_yes"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#FE7246"
        app:layout_constraintStart_toEndOf="@+id/btn_sdd_cancel"
        app:layout_constraintTop_toBottomOf="@+id/tv_sdd" />

</androidx.constraintlayout.widget.ConstraintLayout>