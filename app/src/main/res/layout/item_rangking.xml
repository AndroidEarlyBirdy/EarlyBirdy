<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_board1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_setting"
        android:paddingHorizontal="40dp"
        android:paddingVertical="16dp"
        android:text="@string/itemranking_rank"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_4th"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="90dp"
        android:adjustViewBounds="true"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_profile_add"
        app:layout_constraintBottom_toBottomOf="@+id/tv_board1"
        app:layout_constraintStart_toStartOf="@+id/tv_board1"
        app:layout_constraintTop_toTopOf="@+id/tv_board1"
        app:shapeAppearanceOverlay="@style/RoundedShapeAppearanceOverlay"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp" />

    <TextView
        android:id="@+id/tv_4thid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="@string/itemranking_nickname"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_board1"
        app:layout_constraintStart_toStartOf="@+id/iv_4th"
        app:layout_constraintTop_toTopOf="@+id/tv_board1" />

    <TextView
        android:id="@+id/tv_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/itemranking_exp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_4thid"
        app:layout_constraintEnd_toEndOf="@+id/tv_board1"
        app:layout_constraintTop_toTopOf="@+id/tv_4thid" />

</androidx.constraintlayout.widget.ConstraintLayout>