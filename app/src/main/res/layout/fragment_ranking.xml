<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_gradation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_gr3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/ranking_title"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_2nd"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="32dp"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person1"
            app:layout_constraintEnd_toStartOf="@+id/iv_1st"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_Title"
            app:shapeAppearanceOverlay="@style/RoundedShapeAppearanceOverlay"
            app:strokeColor="@color/white"
            app:strokeWidth="3dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_3rd"
            android:layout_width="80dp"
            android:layout_height="80dp"


            android:layout_marginStart="32dp"
            android:layout_marginTop="70dp"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person1"
            app:layout_constraintStart_toEndOf="@+id/iv_1st"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_Title"
            app:shapeAppearanceOverlay="@style/RoundedShapeAppearanceOverlay"
            app:strokeColor="@color/white"
            app:strokeWidth="3dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_1st"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person1"
            app:layout_constraintEnd_toEndOf="@+id/iv_gradation"
            app:layout_constraintStart_toStartOf="@+id/iv_gradation"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_Title"
            app:shapeAppearanceOverlay="@style/RoundedShapeAppearanceOverlay"
            app:strokeColor="@color/ic_main_background"
            app:strokeWidth="3dp" />

        <ImageView
            android:id="@+id/iv_1background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_1st"
            app:layout_constraintEnd_toEndOf="@+id/iv_1st"
            app:layout_constraintStart_toStartOf="@+id/iv_1st"
            app:layout_constraintTop_toTopOf="@+id/iv_1st"
            app:srcCompat="@drawable/ic_1" />

        <ImageView
            android:id="@+id/iv_2background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_2nd"
            app:layout_constraintEnd_toEndOf="@+id/iv_2nd"
            app:layout_constraintStart_toStartOf="@+id/iv_2nd"
            app:layout_constraintTop_toTopOf="@+id/iv_2nd"
            app:srcCompat="@drawable/ic_2" />

        <ImageView
            android:id="@+id/iv_3background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_3rd"
            app:layout_constraintEnd_toEndOf="@+id/iv_3rd"
            app:layout_constraintStart_toStartOf="@+id/iv_3rd"
            app:layout_constraintTop_toTopOf="@+id/iv_3rd"
            app:srcCompat="@drawable/ic_3" />

        <TextView
            android:id="@+id/tv_2nd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv_2background"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="@+id/iv_2background"
            app:layout_constraintTop_toBottomOf="@+id/iv_2background" />

        <TextView
            android:id="@+id/tv_3rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv_3background"
            app:layout_constraintStart_toStartOf="@+id/iv_3background"
            app:layout_constraintTop_toBottomOf="@+id/iv_3background" />

        <TextView
            android:id="@+id/tv_1st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv_1background"
            app:layout_constraintStart_toStartOf="@+id/iv_1background"
            app:layout_constraintTop_toBottomOf="@+id/iv_1background" />

        <TextView
            android:id="@+id/tv_2exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경험치"
            app:layout_constraintEnd_toEndOf="@+id/tv_2nd"
            app:layout_constraintStart_toStartOf="@+id/tv_2nd"
            app:layout_constraintTop_toBottomOf="@+id/tv_2nd" />

        <TextView
            android:id="@+id/tv_3exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경험치"
            app:layout_constraintEnd_toEndOf="@+id/tv_3rd"
            app:layout_constraintStart_toStartOf="@+id/tv_3rd"
            app:layout_constraintTop_toBottomOf="@+id/tv_3rd" />

        <TextView
            android:id="@+id/tv_1exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경험치"
            app:layout_constraintEnd_toEndOf="@+id/tv_1st"
            app:layout_constraintStart_toStartOf="@+id/tv_1st"
            app:layout_constraintTop_toBottomOf="@+id/tv_1st" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_rank"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_rank_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_1exp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ranking"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cl_rank"
                app:layout_constraintStart_toStartOf="@+id/cl_rank"
                app:layout_constraintTop_toTopOf="@+id/cl_rank"
                tools:listitem="@layout/item_rangking" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>