<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_fhd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="80dp"
    android:background="#E6FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">
    <ImageView
        android:id="@+id/ic_fhd_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_logo"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="EarlyBirdy"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/ic_fhd_logo"
        app:layout_constraintBottom_toBottomOf="@id/ic_fhd_logo"
        app:layout_constraintStart_toEndOf="@id/ic_fhd_logo"/>
<!--    <ImageView-->
<!--        android:id="@+id/ic_fhd_share"-->
<!--        android:layout_width="30dp"-->
<!--        android:layout_height="30dp"-->
<!--        android:layout_margin="16dp"-->
<!--        android:src="@drawable/ic_dialog_share"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"/>-->

    <TextView
        android:id="@+id/tv_fhd_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="출석 완료!"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/ic_fhd_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_fhd_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="임시1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="40dp"
        android:paddingHorizontal="25dp"
        app:layout_constraintBottom_toTopOf="@id/exp_background"
        app:layout_constraintTop_toBottomOf="@id/tv_fhd_complete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_fhd_exp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="임시2"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/btn_fhd_ok"
        app:layout_constraintTop_toBottomOf="@+id/tv_fhd_exp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/exp_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:src="@drawable/exp_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_fhd_exp2"
        app:layout_constraintBottom_toBottomOf="@id/tv_fhd_exp2"/>
    <TextView
        android:id="@+id/tv_fhd_exp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="임시2"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/btn_fhd_ok"
        app:layout_constraintTop_toBottomOf="@+id/tv_fhd_exp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_fhd_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/exp_dialog_button"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>