<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_radius_background"
    android:layout_gravity="center"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_signup_dialog_select"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_logo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:shapeAppearanceOverlay="@style/circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/iv_signup_dialog1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/img_profile_man1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_signup_dialog_select"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_signup_dialog2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/img_profile_woman1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_signup_dialog1"
        app:layout_constraintTop_toBottomOf="@id/iv_signup_dialog_select"/>

    <ImageView
        android:id="@+id/iv_signup_dialog3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/img_profile_man2"
        app:layout_constraintTop_toBottomOf="@id/iv_signup_dialog1"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_signup_dialog4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/img_profile_woman2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_signup_dialog2"
        app:layout_constraintStart_toEndOf="@id/iv_signup_dialog3"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signup_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:backgroundTint="#DBDBDA"
        app:layout_constraintTop_toBottomOf="@id/iv_signup_dialog3"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signup_dialog_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="10dp"
        android:layout_marginEnd="16dp"
        android:text="저장"
        android:textStyle="bold"
        android:textSize="20sp"
        app:backgroundTint="#FE7246"
        app:layout_constraintTop_toBottomOf="@id/iv_signup_dialog4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>