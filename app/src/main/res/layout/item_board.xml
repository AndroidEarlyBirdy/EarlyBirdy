<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_board"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="작성자"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/iv_writerProfile"
        app:layout_constraintStart_toEndOf="@+id/iv_writerProfile"
        app:layout_constraintTop_toTopOf="@+id/iv_writerProfile" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#E4E4E4"
        app:layout_constraintStart_toStartOf="@+id/et_contentsTitle"
        app:layout_constraintTop_toBottomOf="@+id/iv_writerProfile" />

    <TextView
        android:id="@+id/et_contentsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="글 제목"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/iv_load_image"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageView
        android:id="@+id/iv_load_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_foreground"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iv_writerProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/img_profile_camera"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toStartOf="@+id/et_contentsTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>